<div class="row">
  <div class="small-8 large-centered columns">
    <h1>Fauteuil's Selection of Chairs</h1>
     <%= link_to "My Turn to Add a Chair", new_chair_path, class:"button expand"%>
  </div>
</div>

<% @chairs.each do |chair| %>
  <div class="row chair" data-type="background" id="<%=chair.id%>">
  <div class="small-12 columns">
    <article class="chair-focus">
      <%= image_tag chair.picture_url %>
      <%= link_to chair.name, chair_path(chair.id)%>
      Location: <%= chair.location %>
      Average Rating: <%= chair.average_rating %>
    </article>
    </div>
  </div>
<% end %>

<% if !params[:search] %>
<div class="row">
  <div class="small-8 columns small-centered">
    <%= paginate @chairs %>
  </div>
</div>
<% end %>
