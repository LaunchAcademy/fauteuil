<div class="row">
  <div class="large-4 columns">
    <h2> Add a new chair! </h2>

    <ul>
      <% if @chair.errors.any? %>
         <% @chair.errors.full_messages.each do |message| %>
            <li><%= message %></li>
         <% end %>
      <% end %>
    </ul>

    <%= form_for @chair do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name ,placeholder: "e.g. stool" %>

      <%= f.label :manufacturer %>
      <%= f.text_field :manufacturer,placeholder: "e.g. Ikea" %>

      <%= f.label :location %>
      <%= f.text_field :location,placeholder:"where you found this chair" %>

      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "e.g. Amazing back support,
      blends in with my red curtains, etc..." %>

      <%= f.label :category %>
      <%= f.collection_select(:category_id, Category.all, :id, :name)%>

      <%= f.label :picture %>
      <%= f.file_field :picture %>
      <%= f.hidden_field :picture_cache %>
      <%= image_tag @chair.picture_url %>

      <%= f.submit 'Add Chair', :class => 'button tiny' %>

      <p><%= link_to "Back", :back %></p>

    <% end %>

 </div>
</div>
