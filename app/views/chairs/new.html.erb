
<h2> Add a new chair! </h2>

<ul>
  <% if @chair.errors.any? %>
     <% @chair.errors.full_messages.each do |message| %>
        <li><%= message %></li>
     <% end %>
  <% end %>
</ul>

<%= form_for @chair do |f| %>

  <%= f.label :name %>:
  <%= f.text_field :name ,placeholder: "e.g. stool" %><br>

  <%= f.label :manufacturer %>:
  <%= f.text_field :manufacturer,placeholder: "e.g. Ikea" %><br>

  <%= f.label :location %>:
  <%= f.text_field :location,placeholder:"where you found this chair" %><br>


  <%= f.label :description %>:
  <%= f.text_area :description, placeholder: "e.g. Amazing back support,
  blends in with my red curtains, etc..." %><br>

  <%= f.label :category %>:
  <%= f.collection_select(:category_id, Category.all, :id, :name)%><br> <br>

  <%= f.submit "Add Chair" %>
<% end %>
<br>
<%= link_to "H O M E", chairs_path%>
